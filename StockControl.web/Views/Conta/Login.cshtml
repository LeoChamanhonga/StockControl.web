@model StockControl.web.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<div class="login">
    <div class="row">
        <h3 class="titulo">Entrar no Sistema</h3>
    </div>
    <div class="row">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Conta", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.Utilizador, new { @class = "form-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Utilizador, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Utilizador, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Senha, new { @class = "form-label col-md-2" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-danger" })
                    </div>

                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 ">
                        @Html.CheckBoxFor(m => m.LembrarMe)
                        @Html.LabelFor(m => m.LembrarMe)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 ">
                        <input type="submit" class="btn-success" value="Entrar" />
                    </div>
                </div>


            }
        </section>
    </div>
</div>

@section Scripst{
    @Scripts.Render("~/bundle/jqueryval")
}

