@model List<StockControl.web.Models.GrupoProdutoModel>
@{
    ViewBag.Title = "Registo de Grupo de Produtos";
}

<style>
    #cabecalho-grid > thead > tr th:nth-child(2) {
        width: 110px;
    }

    #grid-cadastro > thead > tr th:nth-child(3) {
        width: 200px;
    }

    #registo {
        width: 70%;
        margin: auto;
    }

    #registo-cabecalho {
        border-bottom: 1px #dddddd solid;
    }

    #registo-conteudo {
        margin-top: 20px;
    }

    #cabecalho-grid {
        margin-bottom: 20px;
    }
</style>


<div id="registo">
    <section id="registo-cabecalho">
        <h1>@ViewBag.Title</h1>

    </section>
    <section id="registo-conteudo">

        <div id="cabecalho-grid" class="row">
            <div class="col-md-12">
                <a id="btn_incluir" class="btn btn-success" role="button"><i class="glyphicon glyphicon-plus">Adicionar</i></a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">

                <table id="grid-cadastro" class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Ativo</th>
                            <th>Acao</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Nome</td>
                                <td>@{var ativo = (item.Ativo ? "SIM" : "NAO"); }@ativo</td>

                                <td>
                                    <a class="btn btn-primary btn_alterar" role="button"><i class="glyphicon glyphicon-pencil"></i>Alterar</a>
                                    <a class="btn btn-danger btn_excluir" role="button"><i class="glyphicon glyphicon-trash"></i>Excluir</a>
                                </td>
                            </tr>

                        }

                    </tbody>
                </table>

            </div>
        </div>
    </section>
</div>
<div id="modal_registro" class="form-horizontal invisible " role="dialog">
    <fieldset>
        <div class="row">
            <div class="form-group">
                @Html.Label("txt_nome", "Nome", new { @class = "control-label col-md-3" })
                <div class="col-md-3">
                    @Html.TextBox("txt_nome", null, new { @class = "form-control col-md-3" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("cbx_ativo", "Ativo", new { @class = "control-label col-md-3" })
                <div class="col-md-3">
                    @Html.CheckBox("cbx_ativo")
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="modal-footer">
                        <a id="btn_sair" class="btn btn-default" role="button" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i> Sair</a>
                        <a id="btn_confirmar" class="btn btn-primary" role="button"><i class="glyphicon glyphicon-ok"></i> Gravar</a>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>


</div>

@section Scripts{
    <script>
        $(document).on('click', '#btn_incluir', function () {
            bootbox.dialog({
                title: '@ViewBag.Title',
                message: $('#modal_registro')
            })
                .on('show.bs.modal', function () {
                    $('#modal_registro').show();
                 });
        })
        .on('click', '.btn_alterar', function () {
              alert('2')
          })
        .on('click', '.btn_excluir', function () {
              alert('13')
        })

    </script>
    
}